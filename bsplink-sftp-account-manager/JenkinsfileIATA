#!/usr/bin/env groovy

pipeline {

    agent any

    stages {
    	stage('SonarQube') {
            steps {
            	withSonarQubeEnv('a2lsonarq1 - IATA') {
            	    dir('bsplink-sftp-account-manager') {
            	        configFileProvider([configFile(fileId: 'gradle.properties', targetLocation: '.')]) {
	            	        sh './gradlew sonarqube'
            	        }
            	    }
	            }
	        }
	  	}
	}
}